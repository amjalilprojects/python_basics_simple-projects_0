# this is a simple quiz game
print("Welcome to the quiz.")
playing = input("Would you like to play? ").lower()

if playing != "yes":
  quit()

print("Okay! Let's play :)")
# score variable that will keep track of the score the user gets it will increment for every correct answer.
score = 0 

answer = input("What does CPU stand for? ").lower()
if answer == "central processing unit":
  print("Correct!")
  score += 1
else:
  print("Incorrect")

answer = input("What does GPU stand for? ").lower()
if answer == "graphics processing unit":
  print("Correct!")
  score += 1
else:
  print("Incorrect")

answer = input("What does RAM stand for? ").lower()
if answer == "random access memory":
  print("Correct!")
  score += 1
else:
  print("Incorrect")

answer = input("What does PSU stand for? ").lower()
if answer == "power supply unit":
  print("Correct!")
  score += 1
else:
  print("Incorrect")

answer = input("What does ROM stand for? ").lower()
if answer == "read only memory":
  print("Correct!")
  score += 1
else:
  print("Incorrect")
  
# using f string to display variables
print(f"You got {score} questions correct!")
print(f"You got {score/5 * 100} %.")

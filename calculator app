def add(a, b):
    answer = a + b
    print(f"{a} + {b} = {answer}")
    
def sub(a, b):
    answer = a - b
    print(f"{a} - {b} = {answer}")
    
def mul(a, b):
    answer = a * b
    print(f"{a} x {b} = {answer}")
    
def div(a, b):
    answer = a / b
    print(f"{a} / {b} = {answer}")
    

print("A. Addition")
print("B. Subtraction")
print("C. Multiplication")
print("D. Division")
print("E. Exit")

choice = input("Input your choice: ").lower() # converts all choice to lowercase

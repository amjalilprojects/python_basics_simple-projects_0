year = int(input("Enter the year to check if it is a leap year: "))

def leap_year(year):
    if year % 4 == 0:
        
        if year % 100 == 0:
            
            if year % 400 == 0:
                print(f"The year {year} is a Leap year.")
            else:
                print(f"The year {year} is not a leap year.")
        else:
            print(f"The year {year} is a Leap year.")
    else:
        print(f"The year {year} is not a leap year.")
